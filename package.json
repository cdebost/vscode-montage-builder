{
  "name": "montage-builder",
  "displayName": "Montage Builder",
  "description": "A VS Code UI extension for editing Montage components",
  "version": "0.0.1",
  "publisher": "Kaazing",
  "engines": {
    "vscode": "^1.19.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "builder.open",
        "title": "Open Montage Builder"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "builder",
          "name": "Montage Builder",
          "when": "reelFileActive"
        }
      ]
    },
    "languages": [
      {
        "id": "reel",
        "extensions": [
          ".reel"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "postinstall": "cd server && npm install && cd .. && node ./node_modules/vscode/bin/install",
    "compile": "tsc -p tsconfig.json && tsc -p server/tsconfig.json",
    "compile:client": "tsc -p ./",
    "watch:client": "tsc -w -p ./",
    "compile:server": "tsc -p server/tsconfig.json",
    "watch:server": "tsc -w -p server/tsconfig.json",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
