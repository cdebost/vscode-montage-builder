{
    "name": "montage-builder",
    "displayName": "Montage Builder",
    "description": "A VS Code UI extension for editing Montage components",
    "version": "0.0.1",
    "publisher": "Kaazing",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:builder.open"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "builder.open",
                "title": "Open Montage Builder"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "builder",
                    "name": "Montage Builder",
                    "when": "reelFileActive" 
                }
            ]
        },
        "languages": [
            {
                "id": "reel",
                "extensions": [
                    ".reel"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
